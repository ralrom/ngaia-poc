API_URL=http://localhost:3333

TZ=UTC
PORT=3333
HOST=localhost
LOG_LEVEL=info
APP_KEY=
NODE_ENV=development
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=
DB_PASSWORD=
DB_DATABASE=
SESSION_DRIVER=cookie

# AWS Cognito Configuration
COGNITO_CLIENT_ID=
COGNITO_CLIENT_SECRET=
COGNITO_ISSUER=

# ======================================================================================================================
# START Storage Configuration
# ----------------------------------------------------------------------------------------------------------------------

# Choose either 's3' for AWS S3 (with IAM roles) or 'minio' for MinIO/S3-compatible storage (with credentials)
DRIVE_DISK=minio

# Common Configuration (required for both S3 and MinIO)
AWS_REGION=us-east-1
S3_BUCKET=uploads

# MinIO Configuration (only needed when DRIVE_DISK=minio)
# For local MinIO or S3-compatible storage with explicit credentials
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_ENDPOINT=http://localhost:9000

# AWS S3 Configuration (only needed when DRIVE_DISK=s3)
# Uses IAM roles for authentication - no credentials needed in .env
# AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY should NOT be set
# KMS_KEY_ID is optional for server-side encryption
# KMS_KEY_ID=

# ----------------------------------------------------------------------------------------------------------------------
# END Storage Configuration
# ======================================================================================================================

# AWS SQS Configuration (required)
# Used for processing promotion analysis files
SQS_QUEUE_URL=

# Service Account Authentication (optional)
# Used for service-to-service authentication (e.g., 3rd party backends uploading results)
# If set, requests with "Authorization: Bearer <AWS_SERVICE_ACCOUNT_KEY>" will be authenticated
AWS_SERVICE_ACCOUNT_KEY=
